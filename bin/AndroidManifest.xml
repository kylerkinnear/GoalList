<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goallist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE">
    </uses-permission>
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name= "com.example.goallist.MainActivity"
            android:label= "@string/app_name"
            android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name= "com.example.goallist.GoalActivity"
            android:label= "@string/app_name"
            android:theme="@style/noAnimTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name= "com.example.goallist.MyGoalsActivity"
            android:label= "@string/app_name"
            android:theme="@style/noAnimTheme">
        </activity>
        <activity
            android:name= "com.example.goallist.SettingsActivity"
            android:label= "@string/app_name"
            android:theme="@style/noAnimTheme">
        </activity>
    </application>

</manifest>
