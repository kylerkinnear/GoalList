<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/fragment_my_goals_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textview_My_Goals_Header_Top_Left"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="@drawable/img_header_top_left" />

    <TextView
        android:id="@+id/textview_My_Goals_Header_Top_Mid"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textview_My_Goals_Header_Bottom_Mid"
        android:layout_toRightOf="@+id/textview_My_Goals_Header_Top_Left"
        android:background="@drawable/img_header_top_padding"
        android:gravity="center"
        android:text="@string/string_Settings" 
        android:textColor="@android:color/white"/>
    
    <TextView
        android:id="@+id/textview_My_Goals_Header_Top_Right"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/img_header_top_right" />
    
    <TextView
        android:id="@+id/textview_My_Goals_Header_Bottom_Left"
        android:layout_width="20dp"
        android:layout_height="7dp"
        android:layout_below="@+id/textview_My_Goals_Header_Top_Left"
        android:background="@drawable/img_header_bottom_left"/>
    
    <TextView
        android:id="@+id/textview_My_Goals_Header_Bottom_Mid"
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:layout_below="@+id/textview_My_Goals_Header_Top_Mid"
        android:layout_toLeftOf="@+id/textview_My_Goals_Header_Bottom_Right"
        android:layout_toRightOf="@+id/textview_My_Goals_Header_Bottom_Left"
        android:background="@drawable/img_header_bottom_padding" />
    
     <TextView
        android:id="@+id/textview_My_Goals_Header_Bottom_Right"
        android:layout_width="20dp"
        android:layout_height="7dp"
        android:layout_above="@+id/button_Goal_Settings_Padding"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_header_bottom_right" />
    
    <Button
        android:id="@+id/button_Goal_Settings"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textview_My_Goals_Header_Bottom_Left"
        android:layout_marginTop="5dp"
        android:background="@drawable/imgbutton_goal_settings"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_Goal_Settings_Padding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/textview_My_Goals_Header_Bottom_Mid"
        android:layout_toRightOf="@+id/button_Goal_Settings"
        android:background="@drawable/imgbutton_general_padding"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_Notifications"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_Goal_Settings"
        android:background="@drawable/imgbutton_notifications"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_Notifications_Padding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/button_Notifications"
        android:layout_below="@+id/button_Goal_Settings"
        android:background="@drawable/imgbutton_general_padding"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_Social_Media"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_Notifications"
        android:background="@drawable/imgbutton_social_media"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_Social_Media_Padding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/button_Social_Media"
        android:layout_below="@+id/button_Notifications"
        android:background="@drawable/imgbutton_general_padding"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_About"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_Social_Media"
        android:background="@drawable/imgbutton_about"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <Button
        android:id="@+id/button_About_Padding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/button_About"
        android:layout_below="@+id/button_Social_Media"
        android:background="@drawable/imgbutton_general_padding"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick" />
    
    <TextView
        android:id="@+id/textview_Shadow_Left"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button_About"
        android:background="@drawable/img_button_shading"
        />
    
    <TextView
        android:id="@+id/textview_Shadow_Right"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/button_About"
        android:layout_toRightOf="@+id/textview_Shadow_Left"
        android:background="@drawable/img_button_shadding_padding"
        />

    <TextView
        android:id="@+id/textview_filler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textview_Shadow_Left"
        android:background="@color/fragment_my_goals_background" />
    
</RelativeLayout>
